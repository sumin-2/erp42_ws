<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:arg name="pkg_share"        default=""/>
  <xacro:property name="wheel_radius" value="0.28"/>
  <xacro:property name="wheel_length" value="0.15"/>
  <xacro:property name="wheel_mass" value="5"/>
  <xacro:property name="wheel_friction" value="0.72"/>

  <xacro:property name="disk_radius" value="0.1"/>
  <xacro:property name="disk_length" value="0.03"/>
  <xacro:property name="disk_mass" value="2"/>

  <xacro:property name="camera_size" value="0.05"/>
  <xacro:property name="camera_mass" value="1e-5"/>

  <!-- Steering link + hinge joint for front wheels -->
  <xacro:macro name="steer_link" params="side y_offset">
    <link name="${side}_front_steer_link"/>
    <joint name="${side}_steering_hinge_joint" type="revolute">
      <parent link="structure"/>
      <child link="${side}_front_steer_link"/>
      <origin xyz="0 ${y_offset} 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.52" upper="0.52" effort="5.0" velocity="1.0"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>
  </xacro:macro>

  <!-- Wheel link -->
  <xacro:macro name="wheel" params="prefix suffix x y z pitch yaw">
    <link name="${prefix}_${suffix}_wheel">
      <visual>
        <origin xyz="${x} ${y} ${z}" rpy="1.5707 ${pitch} ${yaw}"/>
        <geometry>
          <mesh filename="$(arg pkg_share)//meshes/caucho.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      </collision>
      <inertial>
        <mass value="${wheel_mass}"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>
  </xacro:macro>

  <!-- Wheel joint: parent_link을 인자로 받도록 변경 -->
  <xacro:macro name="wheel_joint" params="prefix suffix parent_link x y z">
    <joint name="${prefix}_${suffix}_wheel_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <parent link="${parent_link}"/>
      <child link="${prefix}_${suffix}_wheel"/>
      <origin xyz="${x} ${y} ${z}"/>
    </joint>
  </xacro:macro>

  <!-- Disk wheel -->
  <xacro:macro name="disk_wheel" params="prefix suffix roll pitch yaw with_gazebo:=false">
    <link name="${prefix}_${suffix}_disk_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="${roll} ${pitch} ${yaw}"/>
        <geometry>
          <mesh filename="$(arg pkg_share)//meshes/disk.dae" scale="1 1 1"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <cylinder radius="${disk_radius}" length="${disk_length}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      </collision>

      <inertial>
        <mass value="${disk_mass}"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
      </inertial>
    </link>

    <xacro:if value="${with_gazebo}">
      <gazebo reference="${prefix}_${suffix}_disk_wheel">
        <material>Gazebo/Green</material>
        <mu1>0.8</mu1>
        <mu2>0.8</mu2>
      </gazebo>
    </xacro:if>
  </xacro:macro>

  <!-- Disk joint (front) -->
  <xacro:macro name="front_disk_wheel_joint" params="prefix suffix x y z">
    <joint name="${prefix}_${suffix}_disk_wheel_joint" type="revolute">
      <parent link="structure"/>
      <child link="${prefix}_${suffix}_disk_wheel"/>
      <origin xyz="${x} ${y} ${z}"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="-0.523" upper="0.523" velocity="1.0"/>
      <dynamics damping="0.1" friction="0.1"/>
      <initial_position>0.0</initial_position>
    </joint>
  </xacro:macro>

  <!-- Disk joint (back, fixed) -->
  <xacro:macro name="back_disk_wheel_joint" params="prefix suffix x y z">
    <joint name="${prefix}_${suffix}_disk_wheel_joint" type="fixed">
      <parent link="structure"/>
      <child link="${prefix}_${suffix}_disk_wheel"/>
      <origin xyz="${x} ${y} ${z}"/>
    </joint>
  </xacro:macro>

  <!-- Camera link -->
  <xacro:macro name="my_camera" params="prefix">
    <link name="${prefix}_camera">
      <visual>
        <origin xyz="0 0 0"/>
        <geometry>
          <box size="${camera_size} ${camera_size} ${camera_size}"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="${camera_size} ${camera_size} ${camera_size}"/>
        </geometry>
        <origin xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="${camera_mass}"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>
  </xacro:macro>

  <!-- Camera joint -->
  <xacro:macro name="camera_joint" params="prefix:=__undefined__ x:=0 y:=0 z:=0 roll:=0 pitch:=0 yaw:=0">
    <xacro:if value="${prefix == '__undefined__'}">
      <xacro:warning message="⚠ camera_joint: prefix is missing!" />
    </xacro:if>
    <joint name="${prefix}_camera_joint" type="fixed">
      <parent link="structure"/>
      <child link="${prefix}_camera"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
    </joint>
  </xacro:macro>

</robot>
